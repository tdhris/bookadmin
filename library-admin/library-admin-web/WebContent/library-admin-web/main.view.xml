<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="library-admin-web.main" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Library Admin">
		<content>
			<IconTabBar id="tabBar">
				<items>
					<IconTabFilter text="Add Book">
						<VBox alignItems="Center">
							<items>
								<Input id="titleInput" type="Text" placeholder="Enter Book Title"
									valueStateText="Title must not be empty. Maximum 30 characters."
									value="{ path : 'formModel>/book/title', type : 'sap.ui.model.type.String', constraints : { minLength: 1, maxLength: 30  } }" />
								<Input id="authorInput" placeholder="Enter author"
									value="{ path : 'formModel>/book/author', type : 'sap.ui.model.type.String', constraints : {  minLength: 1,   maxLength: 30} }" />
								<Input id="descriptionInput" placeholder="Enter book description"
									value="{ path : 'formModel>/book/description', type : 'sap.ui.model.type.String',constraints : { minLength: 10, maxLength: 300} }" />
								<Input id="copiesInput" placeholder="Copies count"
									value="{path : 'formModel>/book/copies',type : 'sap.ui.model.type.Integer', constraints : { minIntegerDigits: 1, maxIntegerDigits: 5 } }" />
								<Button text="Add Book" press="addBook" />
							</items>
						</VBox>
					</IconTabFilter>
					<IconTabFilter text="Add User">
						<VBox alignItems="Center">
							<items>					
								<Input id="usernameInput" type="Text" placeholder="Enter username"
									valueStateText="Username must not be empty. Maximum 30 characters."
									value="{ path : 'formModel>/user/username', type : 'sap.ui.model.type.String', constraints : { minLength: 3, maxLength: 30  } }" />
								<Input id="facultyNumberInput" placeholder="Faculty Number"
									value="{path : 'formModel>/user/facultyNumber', type : 'sap.ui.model.type.Integer', constraints : { minIntegerDigits: 1, maxIntegerDigits: 5 } }" />
								<Button text="Add User" press="addUser" />
							</items>
						</VBox>
					</IconTabFilter>
					<IconTabFilter text="List Books">
						<Table id="idBooksTable" inset="false" visibleRowCount="5"
							selectionMode="Single" editable="false" items="{bookModel>/}">
							<headerToolbar>
								<Toolbar>
									<Label text="Books"></Label>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column width="12em">
									<Text text="Title" />
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="Author" />
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="Description" />
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true"
									hAlign="Center">
									<Text text="Copies" />
								</Column>
								<Column hAlign="Right">
									<Text text="Available Copies" />
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier text="{bookModel>title}"
											class="sapMTableContentMargin" />
										<Text text="{bookModel>author}" />
										<Text text="{bookModel>description}" />
										<ObjectNumber number="{bookModel>copies}" />
										<ObjectNumber number="{availableCopies}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter text="List Users">
						<Table id="idUsersTable" inset="false" visibleRowCount="5"
							selectionMode="Single" editable="false" items="{userModel>/}">
							<headerToolbar>
								<Toolbar>
									<Label text="Users"></Label>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column width="12em">
									<Text text="Username" />
								</Column>
								<Column minScreenWidth="Tablet">
									<Text text="Faculty Number" />
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier text="{userModel>username}"
											class="sapMTableContentMargin" />
										<ObjectNumber number="{userModel>facultyNumber}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</core:View>