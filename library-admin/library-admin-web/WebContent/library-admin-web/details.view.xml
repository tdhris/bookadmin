<core:View height="100%" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="library-admin-web.details" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="detailsPageId" title="{userModel>/username Details}"
		showNavButton="true" navButtonTap="goBack">
		<content>
			<ObjectHeader title="{userModel>/username}">
				<attributes>
					<ObjectAttribute text="FACULTY NUMBER : {userModel>/facultyNumber}" />
				</attributes>
			</ObjectHeader>
			<List
				items="{ path: 'activeBooksOfUserModel>/', sorter: { path: 'activeBooksOfUserModel>/title' } }"
				headerText="Books Taken">
				<items>
					<ObjectListItem title="{activeBooksOfUserModel>title}"
						type="Active" press="confirmReturn">
						<attributes>
							<ObjectAttribute text="Written by {activeBooksOfUserModel>author}" />
							<ObjectAttribute
								text="Available Copies Left : {activeBooksOfUserModel>availableCopiesInt}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>
			<List
				items="{ path: 'pastBooksOfUserModel>/', sorter: { path: 'pastBooksOfUserModel>/title' } }"
				headerText="Book History (Books Returned)">
				<items>
					<ObjectListItem title="{pastBooksOfUserModel>title}">
						<attributes>
							<ObjectAttribute text="Written by {pastBooksOfUserModel>author}" />
							<ObjectAttribute
								text="Available Copies : {pastBooksOfUserModel>availableCopiesInt}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>
			<Button text="Take Book" press="showBookList" />
		</content>
	</Page>
</core:View>