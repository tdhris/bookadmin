<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence [http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd]">
    <persistence-unit name="library-admin-jpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>com.sap.internship.libraryadmin.model.Book</class>
		<class>com.sap.internship.libraryadmin.model.User</class>
		<class>com.sap.internship.libraryadmin.model.BookLoan</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="eclipselink.weaving" value="false" />
            <property name="eclipselink.logging.level" value="SEVERE" />
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
<!--                         <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />  -->
        </properties>
    </persistence-unit>
</persistence>